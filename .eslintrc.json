{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "comma-dangle": "off",
        "func-names": "off",
        "no-console": "off",
        "space-before-function-paren": ["error", "never"],
        "prefer-arrow-callback": "off",
        "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"]
    }
}